<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Divider_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_line_size</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="Divider_vertical">
        <item name="android:layout_width">@dimen/default_line_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="appTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="title_text_style" parent="appTextViewStyle">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="content_text_style" parent="appTextViewStyle">
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>